<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?android:attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/list_layout_date"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/list_item_date_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/list_item_date_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:text="19"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_layout_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/list_layout_value"
            android:layout_toRightOf="@+id/list_layout_date"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Others"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some very very long texxt"
                android:textSize="11dp"
                android:textColor="@color/colorCategory"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_layout_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/list_item_types"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#e91e63"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="1dp"
                android:textAlignment="center"
                android:text="Expense"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_item_value"
                android:textAlignment="viewEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500.34PHP"
                android:textColor="@color/colorCategory"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_item_type"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expense"
                android:textColor="@color/colorExpense"
                android:textSize="12dp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>